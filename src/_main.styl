

// -- selection


.links,
.anchors *,
figcaption *,
img,
h1,
input
	&::selection
		background: none !important

::selection
	background: #fff


// -- defaults


html,
body
	height: 100%
	margin: 0
	background: #e1e1e1


// -- onepage


body
	font-family: 'Quattrocento Sans', sans-serif
	font-weight: 400
	letter-spacing: 0.02em
	line-height: 1.2em
	margin: 0 15px 0 15px

	em
		font-style: italic

	a
		text-decoration: none

		&:link,
		&:visited,
		&:active
			color: #000
			transition: box-shadow 0.05s ease-in-out
			box-shadow: inset 0 0.1em 0 0 #e1e1e1, inset 0 -0.15em 0 0 #fff

		&:hover
			box-shadow: inset 0 0.1em 0 0 #e1e1e1, inset 0 -0.15em 0 0 #000


	// -- navigation


	nav
		top: 55px
		position: absolute
		left: calc(25% - 55px)

		#title
			color: white
			text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4)

			#dash
				letter-spacing: -3px
				margin-right: 5px

	// -- main


	main
		font-weight: 400
		max-width: 640px
		display: block
		font-size: 13px
		margin: 0 auto
		padding: 15px 15px 50px 15px
		display: block
		min-height: calc(100% - 80px)

		ul
			margin: 1em 0 0 0

			li
				margin: 0.9em 0 0 2.2em
				font-size: 14px

				&:before
					content: 'â€“'
					display:inline-block
					margin-left: -1.3em
					margin-right: 0.7em
					-webkit-transform: scale(4, 1)
					-moz-transform: scale(4, 1)
					-ms-transform: scale(4, 1)
					-o-transform: scale(4, 1)
					transform: scale(4, 1)

	h1
		font-size: 18px
		letter-spacing: 0.02em
		color: #000

	h2
		font-size: 17px
		letter-spacing: 0.02em
		margin: 30px 0 20px 0
		color: #000

	p
		font-size: 14px


	// -- figure


	figure
		margin: 0

		#splash
			width: 100%
			max-width: 640px

			&::selection
				background: none

		figcaption
			margin: 10px 10px 35px 10px

			span
				display: inline-block
				white-space: nowrap

			p
				color: #000
				font-size: 12px

				a
					&:link,
					&:visited,
					&:active
						color: #000


	// -- footer


	.links
		width: 100%
		display: block
		text-align: center

		a
			box-shadow: none !important

		li
			display: inline
			margin: 12px

			.fa
				font-size: 16px
				color: #000
				transition: color 0.05s ease-in-out

				&:hover
					color: #fff

	.arena
		svg
			width: 20px
			height: 1em
			color: #000
			fill: currentColor
			margin-bottom: -2px
			transition: color 0.05s ease-in-out

			&:hover
				color: #fff

	#date
		border: none
		background: none
		text-align: center
		display: block
		margin: 25px auto
		font-size: 12px
		color: #000
		letter-spacing: 0.02em
		padding-bottom: 50px




