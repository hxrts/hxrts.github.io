

// -- selection


.links,
.anchors *,
figcaption *,
img,
h1,
input
	&::selection
		background: none !important

::selection
	background: #fff


// -- defaults


html,
body
	height: 100%
	margin: 0
	background: #e1e1e1


// -- onepage


body
	font-family: 'Quattrocento Sans', 'Source Sans Pro', sans-serif
	font-weight: 400
	letter-spacing: 0.02em
	margin: 0 15px 0 15px

	em
		font-style: italic

	a
		text-decoration: none

		&:link,
		&:visited,
		&:active
			color: #000
			transition: box-shadow 0.05s ease-in-out
			box-shadow: inset 0 0.1em 0 0 #e1e1e1, inset 0 -0.15em 0 0 #fff

		&:hover
			box-shadow: inset 0 0.1em 0 0 #e1e1e1, inset 0 -0.15em 0 0 #000


	// -- navigation


	.anchors
		position: fixed
		top: 30px
		left: 30px

		a
			&:link,
			&:visited,
			&:active
				box-shadow: none !important
				color: #fff
				line-height: 1.5em
				font-size: 17px
				font-weight: 700

				&:hover
					color: #000


	// -- main


	main
		font-weight: 400
		max-width: 640px
		display: block
		font-size: 13px
		margin: 0 auto
		padding: 15px 15px 50px 15px
		display: block
		min-height: calc(100% - 80px)


		h1
			font-size: 17px
			letter-spacing: 1.5px
			margin: 30px 0 15px 0
			color: #fff
			font-weight: 700

		p
			font-size: 0.9rem

		ul
			list-style: none
			margin: 10px 0 0 0

			li
				padding: 5px 0

				&:before
					content: '\2E3B  '


	// -- figure


	figure
		margin: 0

		#splash
			width: 100%
			max-width: 640px

			&::selection
				background: none

		figcaption
				margin: 10px 0 35px 0

				p
					color: #fff
					font-size: 13px

					a
						&:link,
						&:visited,
						&:active
							color: #fff


	// -- footer


	.links
		width: 100%
		display: block
		text-align: center

		a
			box-shadow: none !important

		li
			display: inline
			margin: 12px

			.fa
				font-size: 16px
				color: #000
				transition: color 0.05s ease-in-out

				&:hover
					color: #fff

	.arena
		svg
			width: 20px
			height: 1em
			color: #000
			fill: currentColor
			margin-bottom: -2px
			transition: color 0.05s ease-in-out

			&:hover
				color: #fff

	#date
		border: none
		background: none
		text-align: center
		display: block
		margin: 25px auto 50px auto
		font-size: 13px
		color: #fff
		letter-spacing: 0.02em






