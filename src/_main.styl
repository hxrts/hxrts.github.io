

// -- selection


.links,
.anchors *,
figcaption *,
img,
h1,
input
	&::selection
		background: none !important

::selection
	background: #e4c8f7



body
	font-family: 'Quattrocento Sans', sans-serif
	font-weight: 400
	letter-spacing: 0.02em
	line-height: 1.2em
	font-size: 14px

main
	margin: 90px 85px

	em
		font-style: italic
	
	a
		text-decoration: none
	
		&:link,
		&:visited,
		&:active
			color: #000
			transition: box-shadow 0.05s ease-in-out
			box-shadow: inset 0 -0.1em 0 0 #fff, inset 0 -0.2em 0 0 #e9e9e9
	
		&:hover
			box-shadow: inset 0 -0.1em 0 0 #fff, inset 0 -0.2em 0 0 #000
	
	h2
		font-size: 18px
		letter-spacing: 0.02em
		margin: 60px 0 20px 0
		color: #000
	
	p
		font-size: 14px
	
	ul
		margin: 1em 0 0 0
	
		li
			margin: 0.5em 0 0 0
			font-size: 14px
