

h2::selection
	background: none !important

::selection
	background: #e4c8f7

*,
*:after,
*:before
	margin: 0
	padding: 0
	box-sizing: border-box
	position: relative

body
	font-family: 'Quattrocento Sans', sans-serif
	font-weight: 400
	letter-spacing: 0.02em
	line-height: 1.2em
	font-size: 14px

main
	margin: 80px 85px

	div
		display: inline-grid
		text-align: left
		height: 17em
		
	.narrow
		width: 20em
	
	.wide
		width: 35em

	em
		font-style: italic
	
	a
		text-decoration: none
	
		&:link,
		&:visited,
		&:active
			color: #000
			transition: box-shadow 0.05s ease-in-out
			box-shadow: inset 0 -0.1em 0 0 #fff, inset 0 -0.2em 0 0 #e9e9e9
	
		&:hover
			box-shadow: inset 0 -0.1em 0 0 #fff, inset 0 -0.2em 0 0 #000
	
	h2
		font-size: 18px
		letter-spacing: 0.02em
		color: #000
	
	p
		font-size: 14px
	
	ul
		position: absolute
		top: 0.5em
		margin-top: 2em
	
		li
			margin: 0.5em 0 0 0
			font-size: 14px
			&:before
				content: 'âš¬'
				display:inline-block
				margin-left: -1.3em
				margin-right: 0.65em
				vertical-align: -5%
	

@media screen and (max-width: 1062px)
	main
		div
			display: block
			height: inherit
			margin-bottom: 4.1em

		h2
			position: inherit

		ul
			position: initial
			margin-top: 1.7em

